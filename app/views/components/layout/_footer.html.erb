 <!-- Footer -->
    <footer class="footer">
        <% @footers.each do |footer| %>
        <div class="container">
            <div class="footer__content">
                <div class="footer__section">
                    <div class="footer__logo">
                        <span class="logo-text"><%= footer.first_name_company%></span>
                        <span class="logo-subtext"><%= footer.second_name_company %></span>
                    </div>
                    <p class="footer__description">
                        <%= footer.sub_title%>
                    </p>
                </div>

                <div class="footer__section">
                    <h3 class="footer__title">Links Rápidos</h3>
                    <ul class="footer__links">
                       <li> <%= link_to "Início", "#home" %> </li>
                       <li> <%= link_to "Serviços", "#services" %> </li>
                       <li> <%= link_to "Tecnologias", "#technologies" %> </li>
                       <li> <%= link_to "Sobre", "#about" %> </li>
                    </ul>
                </div>

                <div class="footer__section">
                    <h3 class="footer__title">Contato</h3>
                    <ul class="footer__contact">
                        <li>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                            <a><%= footer.email %></a>
                        </li>
